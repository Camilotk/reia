#!/usr/bin/env escript

main([]) ->
  usage();
main([File]) ->
  init(),
  reiac:file(File);
main(Options) ->
  init(),
  case Options of
    ["-o", Outfile, Infile] ->
      reiac:file(Infile, Outfile);
    _ ->
      usage()
  end.

init() ->
  code:add_patha("./ebin"),
  code:add_patha("../ebin").
  
usage() ->
  io:format("Usage: reiac [options] file.ra~n"),
  io:format("Options:~n"),
  io:format("  -o filename    location of output file~n").